{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "Book-A-Meal is an application that allows customers to make food orders and helps the food vendor know what the customers want to eat. ",
  "main": "server/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/build/app.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --ignore client --exec babel-node -- server/src/app.js",
    "heroku-postbuild": "npm run build",
    "build": "npm-run-all --parallel build:server build:client",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "build:server": "cross-env NODE_ENV=production babel server/src -d server/build",
    "lint": "eslint **/*.js --fix",
    "lint:client": "eslint client/**/*.js --fix",
    "lint:server": "eslint server/**/*.js --fix",
    "pretest": "npm-run-all lint migrate:test seed:test",
    "test": "npm-run-all --parallel test:server test:client",
    "pretest:client": "npm run lint:client",
    "test:client": "cross-env NODE_ENV=test jest",
    "pretest:server": "npm-run-all lint:server migrate:test seed:test",
    "test:server": "cross-env NODE_ENV=test nyc mocha server/tests",
    "migrate": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "migrate:test": "sequelize --env test db:migrate:undo:all && sequelize --env test db:migrate",
    "seed": "sequelize db:seed:undo:all && sequelize db:seed:all",
    "seed:test": "sequelize --env test db:seed:all",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "10.3.0",
    "npm": "6.2.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otseobande/Book-A-Meal.git"
  },
  "author": "Obande Otse",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otseobande/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/otseobande/Book-A-Meal#readme",
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "david": "^11.0.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "query-string": "^6.5.0",
    "run-series": "^1.1.8",
    "short-uuid": "^3.1.0",
    "timeago.js": "^4.0.0-beta.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.0",
    "reify": "0.17.3",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  }
}